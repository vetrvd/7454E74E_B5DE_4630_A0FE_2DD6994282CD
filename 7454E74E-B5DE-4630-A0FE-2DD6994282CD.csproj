  <ItemGroup>
    <PackageReference Include="AutoMapper">
      <Version>7.0.1</Version>
    </PackageReference>
    <PackageReference Include="Ben.Demystifier">
      <Version>0.1.1</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.App" />
